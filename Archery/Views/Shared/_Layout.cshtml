


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>@ViewBag.Title | Archery</title>
</head>
<body style="background-color:rgb(245, 220, 162)">
    <div style="border:1px solid red">
        <header class="container-fluid" style="background-color:rgb(41, 150, 255)">
            <h1 style="color:white; text-align:center">GT'M : Champion de France de tir à l'arc</h1>
        </header>
        <div class="container">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <!-- Brand and toggle get grouped for better mobile display -->
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">Archery</a>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            <li><a href=@Url.Action("Index", "Home")>Index <span class="sr-only">(current)</span></a></li>
                            <li>
                                @Html.ActionLink("A Propos", "about", "home", null, new { @class = "navbar" });
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li>
                                @Html.ActionLink("Inscription", "Subscribe", "Archers", null, new { @class = "navbar" });
                            </li>
                            <li>
                                @Html.ActionLink("BackOffice", "Index", "Dashboard", new { area = "BackOffice" }, new { @class = "navbar" });
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </div>
    </div>

    <div class="container">
        @Html.Partial("_PartialDisplay")

        @*{ Html.RenderPartial("_PartialDIsplay"); } *@
    </div>

    @RenderBody()

    <footer class="panel-footer">
        &copy; 2018
    </footer>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("SectionScripts", false)

</body>
</html>
