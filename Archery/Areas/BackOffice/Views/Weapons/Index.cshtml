@model IEnumerable<Archery.Models.Weapon>

@{
    ViewBag.Title = "Liste des armes";
}

<h2>Liste des armes</h2>

<p>
    @Html.ActionLink("Ajouter une arme", "Create",null,new { @class = "btn-info btn" })
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Modifer", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Effacer", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
